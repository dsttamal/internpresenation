{
    "name": "bsmmupathalumni/form-builder-backend",
    "description": "PHP Backend for Form Builder Application",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "firebase/php-jwt": "^6.10",
        "vlucas/phpdotenv": "^5.6",
        "illuminate/database": "^10.0",
        "illuminate/events": "^10.0",
        "illuminate/container": "^10.0",
        "symfony/http-foundation": "^6.0",
        "symfony/routing": "^6.0",
        "symfony/http-kernel": "^6.0",
        "league/csv": "^9.16",
        "phpoffice/phpspreadsheet": "^1.29",
        "stripe/stripe-php": "^13.0",
        "phpmailer/phpmailer": "^6.9",
        "respect/validation": "^2.3",
        "monolog/monolog": "^3.7",
        "guzzlehttp/guzzle": "^7.8",
        "dompdf/dompdf": "^2.0",
        "zircote/swagger-php": "^4.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Config\\": "config/",
            "Database\\": "database/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:5000 -t public",
        "serve": "php -S 0.0.0.0:5000 -t public",
        "serve:alt": "php -S 0.0.0.0:8080 -t public",
        "dev": "php -S 0.0.0.0:5000 -t public",
        "test": "vendor/bin/phpunit",
        "test-api": "curl http://localhost:5000/api/health",
        "inspect-db": "php inspect_db.php",
        "docs": "vendor/bin/openapi src/ --output public/openapi.json",
        "docs:yaml": "vendor/bin/openapi src/ --output public/openapi.yaml --format yaml",
        "post-install-cmd": [
            "echo 'Installation completed! Run: composer inspect-db to check database structure'"
        ]
    }
}
